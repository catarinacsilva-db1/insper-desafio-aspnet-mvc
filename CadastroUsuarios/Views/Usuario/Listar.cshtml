@using CadastroUsuarios.Models
@model IEnumerable<UsuarioViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Subtitulo {
    Listagem de Usuários
}

@if (Model.Any())
{
    <div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">Nome Social</th>
                    <th scope="col">Data de Nascimento</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Nome</td>
                        <td>@user.Sobrenome</td>
                        <td>@user.NomeSocial</td>
                        <td>@user.DataNascimento.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else {
    <div>
        @Html.Label("", "Nenhum usuário cadastrado.", new { @class = "form-label" })
    </div>
    }

@Html.Partial("_ListaObservacao")

<a href="@Url.Action("Cadastrar", "Usuario")" class="btn btn-primary">Cadastrar</a>