@{
    ViewBag.Title = "Erro";
}

@model System.Web.Mvc.HandleErrorInfo

@section Subtitulo {
    Ocorreu um erro ao processar a solicitação.
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Erro</title>
</head>
<body>
    <hgroup>
        @if (Model != null && !string.IsNullOrEmpty(Model.Exception?.Message))
        {
            <p><strong>Detalhes:</strong> @Model.Exception.Message</p>
        }
    </hgroup>
</body>
</html>
