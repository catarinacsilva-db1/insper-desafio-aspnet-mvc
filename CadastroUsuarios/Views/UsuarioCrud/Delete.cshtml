@model CadastroUsuarios.Models.UsuarioModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Subtitulo {
    Exclusão de Usuário
}

@*modificar para modal*@

<div class="container">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomeSocial)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeSocial)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>

        <dd>
            @Model.DataNascimento.ToString("dd/MM/yyyy")
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Exluir" class="btn btn-danger" /> 
            <a href="@Url.Action("Index", "UsuarioCrud")" class="btn btn-primary">Voltar</a>
        </div>
    }
</div>
