@model CadastroUsuarios.Models.UsuarioModel

<div class="modal fade" id="confirmaStatus@(Model.Id)" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel@(Model.Id)">Alteração de Status</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Deseja alterar o status do usuário <strong>@Model.Nome @Model.Sobrenome</strong> para @(Model.Ativo ? "Inativo" : "Ativo")?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                @using (Html.BeginForm("AtualizarStatus", "UsuarioCrud"))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", @Model.Id)
                    <input type="submit" value="Confirmar" class="btn btn-danger" />                   
                }
            </div>
        </div>
    </div>
</div>
